{
	"add-field-type": [
        {
            "name":"normalBookTextField",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.ClassicTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.ClassicFilterFactory"},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.ClassicTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.SynonymGraphFilterFactory", "expand":"true", "ignoreCase":"true", "synonyms":"synonyms.txt"},
                    {"class":"solr.SnowballPorterFilterFactory", "language":"English"},
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.ClassicFilterFactory"},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name":"normalBookIntField",
            "class":"solr.IntPointField"
        },
        {
            "name":"normalBookFloatField",
            "class":"solr.FloatPointField"
        }
    ],
    "add-field": [
        {
            "name": "title",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "author",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "language",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "categories",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "currency",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "maturityRating",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "ISBN",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "description",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "publisher",
            "type": "normalBookTextField",
            "indexed": true
        },
        {
            "name": "rating",
            "type": "normalBookFloatField",
            "indexed": true
        },
        {
            "name": "price",
            "type": "normalBookFloatField",
            "indexed": true
        },
        {
            "name": "published_date",
            "type": "normalBookIntField",
            "indexed": true
        },
        {
            "name": "page_count",
            "type": "normalBookFloatField",
            "indexed": true
        },
        {
            "name": "voters",
            "type": "normalBookIntField",
            "indexed": true
        }
    ]
    
}
